import java.util.Scanner;

interface Appliance {
    void turnOn();
    void turnOff();
}

class Fan implements Appliance {
    public void turnOn() {
        System.out.println("Fan is now ON.");
    }

    public void turnOff() {
        System.out.println("Fan is now OFF.");
    }
}

class Light implements Appliance {
    public void turnOn() {
        System.out.println("Light is now ON.");
    }

    public void turnOff() {
        System.out.println("Light is now OFF.");
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.print("Choose appliance (fan/light): ");
        String applianceType = s.next().toLowerCase();

        Appliance appliance;
        if (applianceType.equals("fan")) {
            appliance = new Fan();
        } else {
            appliance = new Light();
        }

        appliance.turnOn();
        appliance.turnOff();

        s.close();
    }
}
